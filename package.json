{
  "name": "tenfoot-launcher",
  "version": "0.1.3",
  "private": true,
  "description": "Cross-platform Electron-based 10-foot launcher with React UI and auto-updates.",
  "main": "dist/main/index.js",
  "type": "module",
  "scripts": {
    "clean": "rimraf dist",
    "dev": "cross-env NODE_ENV=development vite",
    "build": "run-s clean build:bundle",
    "build:bundle": "vite build",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,json,md}\"",
    "format": "prettier --write \"**/*.{ts,tsx,js,json,md}\"",
    "typecheck": "run-s typecheck:renderer typecheck:node",
    "typecheck:renderer": "tsc --noEmit -p tsconfig.json",
    "typecheck:node": "tsc --noEmit -p tsconfig.node.json",
    "test": "run-s test:unit test:e2e",
    "test:unit": "vitest run --coverage",
    "test:e2e": "playwright test --config=tests/e2e/playwright.config.ts",
    "validate:config": "tsx scripts/validate-config.ts",
    "package": "run-s build electron:package",
    "ci:publish": "tsx scripts/publish.ts",
    "package:publish": "pnpm ci:publish -- --ci",
    "package:publish:dry-run": "pnpm ci:publish -- --dry-run",
    "electron:package": "electron-builder --config electron-builder.config.cjs",
    "electron:publish": "electron-builder --config electron-builder.config.cjs --publish always",
    "electron": "electron .",
    "postinstall": "playwright install --with-deps"
  },
  "build": {
    "appId": "com.example.tenfootlauncher"
  },
  "engines": {
    "node": ">=18.17.0",
    "pnpm": ">=8"
  },
  "dependencies": {
    "electron-log": "^5.1.2",
    "electron-updater": "^6.1.8",
    "fs-extra": "^11.2.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tslib": "^2.6.3",
    "windows-shortcuts": "^0.1.6",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@playwright/test": "1.48.2",
    "@testing-library/jest-dom": "^6.4.3",
    "@testing-library/react": "^15.0.3",
    "@testing-library/user-event": "^14.6.1",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^20.12.12",
    "@types/react": "^18.3.1",
    "@types/react-dom": "^18.3.1",
    "@typescript-eslint/eslint-plugin": "^7.10.0",
    "@typescript-eslint/parser": "^7.10.0",
    "@vitejs/plugin-react": "^4.3.0",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "dmg-license": "^1.0.11",
    "electron": "^30.0.0",
    "electron-builder": "^24.13.3",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.34.3",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jsdom": "^24.0.0",
    "npm-run-all": "^4.1.5",
    "playwright": "1.48.2",
    "prettier": "^3.3.2",
    "rimraf": "^5.0.5",
    "typescript": "^5.4.5",
    "tsx": "^4.15.2",
    "vite": "^5.2.11",
    "vite-plugin-electron": "^0.29.0",
    "vite-plugin-electron-renderer": "^0.14.6",
    "@vitest/coverage-v8": "^1.6.0",
    "vitest": "^1.6.0"
  },
  "packageManager": "pnpm@8.15.4"
}
