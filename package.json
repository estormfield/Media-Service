{
  "name": "media-service-launcher",
  "version": "0.1.0",
  "description": "Cross-platform Electron React 10-foot launcher.",
  "main": "dist/main/main.js",
  "author": "",
  "license": "MIT",
  "scripts": {
    "dev": "concurrently -k \"pnpm:dev:renderer\" \"pnpm:watch:main\" \"pnpm:watch:preload\" \"pnpm:dev:electron\"",
    "dev:renderer": "vite --config vite.renderer.config.ts",
    "build": "pnpm build:clean && pnpm build:renderer && pnpm build:main && pnpm build:preload",
    "build:clean": "rimraf dist",
    "build:main": "tsc -p tsconfig.main.json",
    "build:preload": "tsc -p tsconfig.preload.json",
    "build:renderer": "vite build --config vite.renderer.config.ts",
    "lint": "eslint . --ext .ts,.tsx --max-warnings=0",
    "typecheck": "tsc -p tsconfig.typecheck.json",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:e2e": "playwright test",
    "postinstall": "playwright install --with-deps chromium",
    "start": "electron dist/main/main.js",
    "release": "electron-builder --publish always",
    "watch:main": "tsc -p tsconfig.main.json --watch --preserveWatchOutput",
    "watch:preload": "tsc -p tsconfig.preload.json --watch --preserveWatchOutput",
    "dev:electron": "wait-on dist/main/main.js dist/preload/index.js http://localhost:5173 && cross-env NODE_ENV=development electron dist/main/main.js",
    "validate:config": "ts-node scripts/validate-config.ts"
  },
  "dependencies": {
    "@radix-ui/react-visually-hidden": "^1.0.3",
    "electron": "^27.0.0",
    "electron-log": "^5.1.3",
    "electron-updater": "^6.1.5",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "zod": "^3.22.4",
    "windows-shortcuts": "^0.1.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^14.0.0",
    "@types/node": "^20.5.9",
    "@types/react": "^18.2.21",
    "@types/react-dom": "^18.2.7",
    "@typescript-eslint/eslint-plugin": "^6.7.5",
    "@typescript-eslint/parser": "^6.7.5",
    "@vitejs/plugin-react": "^4.1.0",
    "concurrently": "^8.2.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.50.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.4",
    "jsdom": "^22.1.0",
    "playwright": "^1.40.0",
    "prettier": "^3.0.3",
    "rimraf": "^5.0.5",
    "ts-node": "^10.9.1",
    "tslib": "^2.6.2",
    "tsx": "^3.13.0",
    "typescript": "^5.2.2",
    "vite": "^4.4.9",
    "vite-tsconfig-paths": "^4.2.0",
    "vitest": "^0.34.5",
    "wait-on": "^7.0.1"
  },
  "build": {
    "appId": "com.mediaservice.launcher",
    "productName": "Media Service Launcher",
    "files": [
      "dist/main/**/*",
      "dist/preload/**/*",
      "dist/renderer/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "build"
    },
    "mac": {
      "artifactName": "${productName}-${version}-mac.${ext}",
      "target": [
        "dmg",
        "zip"
      ],
      "category": "public.app-category.entertainment"
    },
    "win": {
      "target": [
        "nsis",
        "msi"
      ],
      "artifactName": "${productName}-${version}-win-${arch}.${ext}",
      "publisherName": "Media Service"
    },
    "publish": [
      {
        "provider": "github"
      }
    ]
  }
}